{
  "name": "metashine",
  "version": "1.1.0",
  "description": "Music meta tag editor",
  "repository": "github:HermanLederer/mp3-tag-assistant",
  "license": "MIT",
  "author": {
    "name": "Herman Lederer",
    "email": "germans.lederers@gmail.com",
    "url": "https://hermanlederer.github.io/"
  },
  "keywords": [
    "mp3",
    "tag",
    "editor",
    "application"
  ],
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "build": {
    "appId": "eu.hermanlederer.metashine",
    "productName": "Metashine",
    "target": "NSIS",
    "icon": "builder/app-icon.png",
    "directories": {
      "buildResources": "builder"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "music-metadata": "^7.8.4",
    "node-id3": "^0.2.2",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "electron": "11.4.3",
    "electron-builder": "^22.4.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "typescript": "^4.2.4",
    "webpack": "~4.42.1"
  }
}
